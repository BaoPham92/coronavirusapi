<p id="notice"><%= notice %></p>

<h1>Coronavirus (COVID-19) Data</h1>
<h2>Latest crawled data from all 50 state and DC websites</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tested</th>
      <th>Positive</th>
      <th>Deaths</th>
      <th>Tested crawl date</th>
      <th>Positive crawl date</th>
      <th>Deaths crawl date</th>
      <th>Tested source</th>
      <th>Positive source</th>
      <th>Deaths source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.tested %></td>
        <td><%= state.positive %></td>
        <td><%= state.deaths %></td>
        <td><%= state.tested_crawl_date %></td>
        <td><%= state.positive_crawl_date %></td>
        <td><%= state.deaths_crawl_date %></td>
        <td><%= state.tested_source %></td>
        <td><%= state.positive_source %></td>
        <td><%= state.deaths_source %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

